
	<%= form_with(model: meetup, local: true) do |form| %>
	  <% if meetup.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(meetup.errors.count, "error") %> prohibited this meetup from being saved:</h2>

	      <ul>
	      <% meetup.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="form-row">
		  <div class="field col-md-6">
		    <%= form.label :name %>
		    <%= form.text_field :name, :class => "form-control" %>
		  </div>

		  <div class="field col-md-6">
		    <%= form.label :description %>
		    <%= form.text_field :description, :class => "form-control" %>
		  </div>
	  </div>

	  <h3>Proposed Dates</h3>
	  <div id="schedules">
	  	<%= form.fields_for :schedules do |schedule| %>
	      <%= render 'schedule_fields', :f => schedule %>
	    <% end %>
	    <div class='links proposed-dates'>
	    	<br>
	      <p><%= link_to_add_association 'Click Here To Add Date', form, :schedules, :class => "btn btn-block btn-primary btn-add" %>
	    </div>
	  </div>
	  <br>
	  <div class="actions">
	    <%= form.submit :class => "btn btn-lg btn-block update-date-btn"%>
	  </div>
	<% end %>