<%= form_with(scope: session, url: sessions_path, local: true) do |form| %>
  <% if session.errors.any? %>
	<div id="error_explanation">
	  <h2><%= pluralize(session.errors.count, "error") %> prohibited this session from being saved:</h2>

	  <ul>
	  <% session.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	  <% end %>
	  </ul>
	</div>
  <% end %>

  <p>
		<%= form.label :session_name, 'Session Name:' %>
		<%= form.text_field :session_name %>
	</p>

	<p>
		<%= form.label :session_password, 'Session Password:' %>
		<%= password_field :session, :session_password %>
	</p>

	<p>
		<%= form.label :confirm_password, 'Confirm Password:' %>
		<%= password_field :session, :confirm_password %>
	</p>

	<p>
		<%= form.label :proposed_date, 'Proposed Date:' %>
		<%= date_field(:session, :proposed_date) %>
	</p>

  <div class="actions">
	<%= form.submit %>
  </div>
<% end %>